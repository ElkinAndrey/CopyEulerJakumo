<!DOCTYPE html>

<html>
<head>
    <link rel="stylesheet" href="~/css/Shared/StyleLayout.css" type="text/css" />
    <link rel="stylesheet" href="~/css/Styles.css" type="text/css" />
</head>
<body>
    <div id="center">
        <div id="head">
            <div id="logo">
                <a asp-controller="Home" asp-action="AboutProject" id="title">Проект Эйлера</a>
            </div>
            <div id="links">
                <a asp-controller="Home" asp-action="AboutProject" class="mainButton" style=@(ViewBag.Action == "AboutProject" ? "color: #9c9c9c;" : "")>О проекте</a>
                <a asp-controller="Home" asp-action="Problems" class="mainButton" style=@(ViewBag.Action == "Problems" ? "color: #9c9c9c;" : "")>Задачи</a>
                <a asp-controller="Home" asp-action="Feedback" class="mainButton" style=@(ViewBag.Action == "Feedback" ? "color: #9c9c9c;" : "")>Обратная связь</a>
                <a href="https://projecteuler.net/" class="mainButton">Project Euler.net</a>
            </div>    
        </div>
        <div id="body">
            @RenderBody()
        </div>
        <div id="bottom">
            <div id="original">© Проект Эйлера | Translated problems from <a href="https://projecteuler.net/">ProjectEuler.net</a></div>
        </div>
    </div>
</body>
</html>